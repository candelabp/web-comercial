
--- 
const { title } = Astro.props;
const phoneNumber = "2634692670"; 
const whatsappLink = `https://wa.me/${phoneNumber}`;
import whatsapp from '../assets/whatsapp.svg'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="../assets/cursor.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Candela Puerta</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&family=Sora:wght@600;700;800&display=swap" rel="stylesheet">

	</head>
	<body>
    <header>
      <div class="container header-container">
        <div class="logo">
          <a href="/">Candela Puerta</a>
        </div>
        <nav class="main-nav">
          <a href="/#inicio">Inicio</a>
          <a href="/#servicios">Servicios</a>
          <a href="/#quienes-somos">Sobre MÃ­</a>
          <a href="/#contacto">Contacto</a>
        </nav>
        <button class="hamburger-menu" id="hamburger-btn" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>

		<slot />

    <a href={whatsappLink} class="whatsapp-fab" target="_blank" rel="noopener noreferrer" aria-label="Enviar mensaje por WhatsApp">
      <img src={whatsapp.src} alt="WhatsApp" class="whatsapp-icon" />
    </a>

    <footer>
      <div class="container footer-content">
        <p><strong>E:</strong> candepuerta@gmail.com</p>
        <p class="footer-note">Desarrollo web a medida para marcas y negocios.</p>
      </div>
    </footer>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const hamburgerBtn = document.getElementById('hamburger-btn');
        const nav = document.querySelector('.main-nav');

        hamburgerBtn.addEventListener('click', () => {
          nav.classList.toggle('is-active');
          hamburgerBtn.classList.toggle('is-active');
        });

        // Close menu when a link is clicked
        const navLinks = nav.querySelectorAll('a');
        navLinks.forEach(link => {
          link.addEventListener('click', () => {
            nav.classList.remove('is-active');
            hamburgerBtn.classList.remove('is-active');
          });
        });
      });
    </script>
	</body>
</html>

<style is:global>
  :root {
    --primary-color: #facc15;
    --primary-soft: #fef9c3;
    --text-color: #0f172a;
    --muted-color: #334155;
    --bg-color: #fffdf7;
    --surface: #ffffff;
    --line: #e2e8f0;
    --heading-font: 'Sora', sans-serif;
    --body-font: 'Manrope', sans-serif;
    --whatsapp-green: #25D366;
    --radius-md: 12px;
    --radius-lg: 16px;
    --shadow-soft: 0 6px 20px rgba(15, 23, 42, 0.06);
    --shadow-card: 0 10px 28px rgba(15, 23, 42, 0.08);
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    width: 100%;
    font-family: var(--body-font);
    background-color: var(--bg-color);
    color: var(--text-color);
    line-height: 1.6;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--heading-font);
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0;
  }

  p {
    margin: 0;
  }

  * {
    box-sizing: border-box;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  header {
    padding: 1rem 0;
    background: rgba(255, 255, 255, 0.95);
    position: sticky;
    top: 0;
    z-index: 40;
    border-bottom: 1px solid var(--line);
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .logo a {
    font-size: 1.25rem;
    font-family: var(--heading-font);
    font-weight: 700;
    color: var(--text-color);
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .main-nav a {
    color: var(--text-color);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 700;
    padding: 0.55rem 0.95rem;
    border-radius: 8px;
    transition: color 0.2s ease, background-color 0.2s ease;
  }

  .main-nav a:hover {
    background: var(--primary-soft);
    color: #854d0e;
  }

  .hamburger-menu {
    display: none;
    flex-direction: column;
    gap: 4px;
    cursor: pointer;
    background: none;
    border: 1px solid var(--line);
    border-radius: 10px;
    padding: 0.5rem;
  }

  .hamburger-menu span {
    display: block;
    width: 20px;
    height: 2px;
    background-color: var(--text-color);
    transition: all 0.3s ease-in-out;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1.2rem;
    }

    .main-nav {
      display: none;
      flex-direction: column;
      position: absolute;
      top: calc(100% + 0.5rem);
      right: 1.2rem;
      background: var(--surface);
      min-width: 230px;
      padding: 0.65rem;
      border: 1px solid var(--line);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow-soft);
    }

    .main-nav.is-active {
      display: flex;
    }

    .main-nav a {
      width: 100%;
      border-radius: 10px;
    }

    .hamburger-menu {
      display: flex;
    }

    .hamburger-menu.is-active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    .hamburger-menu.is-active span:nth-child(2) {
      opacity: 0;
    }
    .hamburger-menu.is-active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }
  }

  .whatsapp-fab {
    position: fixed;
    bottom: 1.4rem;
    right: 1.4rem;
    background-color: var(--whatsapp-green);
    color: var(--surface);
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 3px solid rgba(255, 255, 255, 0.95);
    box-shadow: 0 10px 22px rgba(37, 211, 102, 0.28);
    z-index: 30;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .whatsapp-fab:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 14px 24px rgba(37, 211, 102, 0.34);
  }

  .whatsapp-icon {
    width: 32px;
    height: 32px;
    display: block;
  }

  footer {
    margin-top: 4rem;
    border-top: 1px solid var(--line);
    background: var(--surface);
  }

  .footer-content {
    text-align: center;
    padding: 2.5rem 2rem;
    display: grid;
    gap: 0.4rem;
  }

  .footer-note {
    color: var(--muted-color);
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .whatsapp-fab {
      width: 55px;
      height: 55px;
    }

    .whatsapp-icon {
      width: 29px;
      height: 29px;
    }
  }

  main {
    min-height: calc(100vh - 230px);
  }

  a {
    color: inherit;
  }

  strong {
    font-weight: 700;
  }

  footer p {
    margin: 0;
    font-size: 1rem;
  }
</style>
